<!-- app/views/products/show.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-3 h-100">
        <% if @product.image.present? %>
          <%= image_tag @product.image, alt: @product.name, class: 'card-img-top img-fluid h-100' %>
        <% else %>
          <img src="https://via.placeholder.com/400x400" class="card-img-top img-fluid h-100" alt="Sin imagen">
        <% end %>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="card mb-3 h-100">
        <div class="card-header">
          <h1 class="card-title">Product: <%= @product.name %></h1>
        </div>
        <div class="card-body">
          <h2 class="card-subtitle mb-2 text-muted"><%= number_to_currency(@product.price) %></h2>
        <p class="card-text"><strong>SKU:</strong> <%= @product.sku %></p>
          <p class="card-text"><strong>Season:</strong> <%= @product.is_seasonal ? 'Yes' : 'Not' %></p>
          <p class="card-text"><strong>Quantity:</strong> <%= @product.quantity %>  <%= @product.unit %></p>
          <p class="card-text"><strong>Category:</strong> <%= @product.category.name %></p>
          <%= link_to 'Back to Products', products_path, class: 'btn btn-secondary mt-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
