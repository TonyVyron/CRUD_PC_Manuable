<div class="container">
  <div class="row">

   <div class="col-md-8">
      <div class="card mb-3 h-100">
        <div class="card-header">
          <h1 class="card-title"><%= @product.name %></h1>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="card-subtitle text-muted mb-0"><%= number_to_currency(@product.price) %></h1>
            <%= link_to 'Back to Products', products_path, class: 'btn btn-secondary col-md-12 col-lg-3' %>
          </div>
          <p class="card-text"><strong>SKU:</strong> <%= @product.sku %></p>
          <p class="card-text"><strong>Season:</strong> <%= @product.is_seasonal ? 'Yes' : 'Not' %></p>
          <p class="card-text"><strong>Quantity:</strong> <%= @product.quantity %> <%= @product.unit %></p>
          <p class="card-text"><strong>Category:</strong> <%= @product.category.name %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card mb-3 h-100">
        <% if @product.image.present? %>
          <%= image_tag @product.image, alt: @product.name, class: 'card-img-top img-fluid' %>
        <% else %>
          <img src="https://via.placeholder.com/300x300" class="card-img-top img-fluid h-100" alt="Sin imagen">
        <% end %>
      </div>
    </div>
  </div>
</div>
