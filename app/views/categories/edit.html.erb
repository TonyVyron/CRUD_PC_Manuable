<div class="container">
  <h1>Update Category</h1>
  <%= form_with(model: @category, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
    <% if @category.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading"><%= pluralize(@category.errors.count, "error") %> </h4>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="row">
    <div class="col-md-6">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <br>
  <div class="mb-3">
    <%= form.submit 'Update Category', class: 'btn btn-primary' %>
    <%= link_to 'Back to Categories', categories_path, class: 'btn btn-secondary' %>
  </div>
  <% end %>
</div>