<div class="container">
  <h1>List Categories</h1>
  <%= link_to 'Add new Category', new_category_path , class: 'btn btn-primary btn-sm' %>
  <div class="table-container">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr class="clickable-row align-middle" onclick="window.location='<%= category_path(category) %>'">
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td>
              <div class="d-flex">
               <%= link_to "Edit", edit_category_path(category), class: 'btn btn-primary btn-sm', onclick: 'event.stopPropagation();' %>
          <%= button_to 'Delete', category_path(category), method: :delete, class: 'btn btn-danger btn-sm' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
