<div class="container">
  <h1>List Categories</h1>
  <%= link_to 'Add new Categories', new_category_path , class: 'btn btn-primary btn-sm' %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <div class="table-container">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr class="clickable-row align-middle" onclick="window.location='<%= category_path(category) %>'">
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td>
              <div class="d-flex">
                <%= link_to "Edit", edit_category_path(category), class: 'btn btn-primary btn-sm' %>
                <%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
